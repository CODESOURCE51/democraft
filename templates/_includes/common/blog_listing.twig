{% if posts|length %}
<section class="blog-area ptb-130 indicator-style" id="our-blog">
					<div class="container">
						<div class="row">
							<div class="col-md-12 col-sm-12">
								<div class="blog-owl-active owl-carousel owl-theme">
									<!-- Blog Single -->
                                    {% for post in posts %}
                                    <a href="http://{{ post.url }}">
                                    
									<div class="blog-single">
                                    {% if post.featureImage|length %}
                                    {% set image = post.featureImage.one() %}
										<div class="blog-img">
											<img src="{{ image.getUrl() }}" alt="{{ image.title }}" />
                                           
											<h2>{{ post.postDate | date('d') }}<span>{{ post.postDate | date('M') }}</span></h2>
										</div>
                                        {% endif %}
										<div class="blog-content mt-20">
											<div class="blog-cnt-top">
												<h5>{{ post.title }}</h5>
												
											</div>
											<p>{{ post.summary }}</p>
										</div>
									</div>
                                    </a>
                                    {% endfor %}
									<!-- Blog Single -->
									
								</div>
							</div>
							
						</div>
					</div>
				</section>
                {% endif %}